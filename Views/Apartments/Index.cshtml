
@model IEnumerable<Restify.Models.Apartment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>



<div class="container">
    <div class="row text-center">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="max-height:25rem;max-width:17rem">
                    <h5 class="card-header text-white" style="background-color:#56327E"> @item.apartment_name</h5>
                    <div class="card-body">
                        <img class="card-img" style="width: 100%; height: 10rem; object-fit: cover;" src="@item.apartment_image" />
                        <div class="mt-2">
                            <p class="text-start"><strong>Details: </strong> @item.apartment_details</p>
                            <p class="text-start"><strong>Location: </strong> @item.apartment_location</p>
                        </div>
                    </div>
                    <div class="card-footer d-flex flex-row gap-3">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.apartment_id">Edit</a>
                        <a class="btn btn-light" asp-action="Details" asp-route-id="@item.apartment_id">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.apartment_id">Delete</a>
                    </div>
                </div>
            </div>


        }
    </div>
</div>


 
  